<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 220px;
            background-color: #f8f9fa;
            padding: 20px 0;
        }

            .sidebar h4 {
                text-align: center;
                margin-bottom: 20px;
            }

            .sidebar a {
                display: block;
                padding: 10px 20px;
                color: #333;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #e9ecef;
                    color: #007bff;
                }

        .main-container {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .top-bar {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
        }

        .content {
            padding: 20px;
            flex-grow: 1;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>Cemex HRM</h4>
        <a asp-controller="User" asp-action="Create">Create New User</a>
        <a asp-controller="User" asp-action="Index">User List</a>
        <a href="#">Company Settings</a>
        <a href="#">Devices</a>
        <a href="#">Employee Alerts</a>
        <a href="#">Scheduled Tasks</a>
    </div>

    <div class="main-container">
        <div class="top-bar">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
